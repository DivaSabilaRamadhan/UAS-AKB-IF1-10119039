<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Mahasiswa"
            android:layout_gravity="center"
            android:textSize="37sp"
            android:layout_marginTop="50dp"
            android:textColor="#0652DD"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_diva"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:src="@drawable/diva"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama : Diva Sabila Ramadhan"
            android:textSize="20sp"
            android:fontFamily="times new roman"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM : 10119039"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="times new roman"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas : IF-1"
            android:layout_gravity="center"
            android:fontFamily="times new roman"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>